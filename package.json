{
  "name": "day-and-knight",
  "displayName": "day-and-knight",
  "description": "Automatically switch to dark mode at sunset",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "day-and-knight.toggle",
        "title": "Day and Knight: Toggle Theme"
      },
      {
        "command": "day-and-knight.enableAutoUpdate",
        "title": "Day and Knight: Enable Auto Update"
      },
      {
        "command": "day-and-knight.disableAutoUpdate",
        "title": "Day and Knight: Disable Auto Update"
      }
    ],
    "configuration": {
      "title": "Day and Knight",
      "properties": {
        "day-and-knight.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable automatic theme updates."
        },
        "day-and-knight.lightThemes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Default Light+"
          ],
          "description": "Light themes to use during daytime."
        },
        "day-and-knight.darkThemes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "Default Dark+"
          ],
          "description": "Dark themes to use during nighttime."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
